NAME="mongodb-conf"

LOG="$LOG_PATH/$NAME.log"
rm -f $LOG &> /dev/null


function build(){
	true
}

function install(){
	echo " + Post install configurations ..."

	cp mongodb-conf/opt/mongodb/load.d/08_indexes.py $PREFIX/lib/canolibs/indexes.py

	cd $SRC_PATH	
	install_basic_source $NAME

	sed "s#@PREFIX@#$PREFIX#g" -i $PREFIX/etc/collectd.d/*.conf

	install_conf "mongodb.conf"
}
